<div class="container px-5 px-sm-0">
  <div class="row">

<%= render 'books/list', user: @user,book: @newbook %>

<div class="col-md-8 offset-md-1">

<h2>Users</h2>
<table  class="table">
    <thead>
        <tr>
            <th>Image</th>
            <th>name</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <%= image_tag user.get_profile_image(50, 50) %>
                <td><%= link_to user.name, users_path(user) %></td>
                <td><%= link_to "show",user_path(user.id) %></td>
            </tr>
        <% end %>
    </tbody>
</table>

</div>

  </div>
</div>