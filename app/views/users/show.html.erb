<div class="container px-5 px-sm-0">
  <div class="row">

<%= render 'books/list', user: @user, book: @newbook %>

<div class="col-md-8 offset-md-1">

<h1>Books</h1>
<table class="table table-hover table-inverse">
    <thead>
        <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <tr>
        <% @books.each do |book| %>
          <th><%#= image_tag book.get_book_image(100, 100) %></th>
          <th><%= link_to @book.title, book_path(@book) %></th>
          <th><%= @book.body %></th>
        <% end %>
        </tr>
    </tbody>
</table>

</div>

  </div>
</div>