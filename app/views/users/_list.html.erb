<h2>User info</h2>
<div>
    <table>
        <thead>
            <tr>
                <td><%= image_tag @user.get_profile_image(100, 100) %></td>
            </tr>
            <tr>
                <th>name</th>
                <th><%= @user.name %></th>
            </tr>
            <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
            </tr>
        </thead>
    </table>
</div>

<div><%= link_to "edit", edit_user_path(@user.id) %></div>



<h2>New Book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
    <div>
        <h4>Title</h4>
        <%= f.text_field :title %>
    </div>
    <div>
        <h4>Body</h4>
        <%= f.text_area :body %>
    </div>
    <div>
        <%= f.submit 'Create Book' %>
    </div>
<% end %>