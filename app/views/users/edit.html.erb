<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h1>User info</h1>
<%= form_with model: @user do |f| %>

  <div class="form-group">
  <label for="inputName">Name</label><br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <br>
  </div>

  <div class="form-group">
  <label for="inputImage">ProfileImage</label><br>
  <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
  <br>
  </div>

  <div class="form-group">
  <label for="user_introduction">Introduction</label><br>
  <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"introduction" %>
  <br>
  </div>

  <div class="form-group">
  <%= f.submit "Update User" %>
  </div>
<% end %>

    </div>
  </div>
</div>