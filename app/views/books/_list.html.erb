<div class="col-md-3">
  <h2>User info</h2>
      <table class="table">
          <tbody>
              <tr>
                  <td><%= image_tag user.get_profile_image(100, 100) %></td>
              </tr>
              <tr>
                  <th>name</th>
                  <th><%= user.name %></th>
              </tr>
              <tr>
                  <th>introduction</th>
                  <th><%= user.introduction %></th>
              </tr>
          </tbody>
      </table>

  <div class="row">
  <%= link_to "edit", edit_user_path(user.id) %>
  <%# 上のクラスの記述を調べておく。お手本では「class="btn btn-outline-secondary btn-block edit_user_3315"」 %>
  <i class="fas fa-user-cog"></i>
  </div>

  
    <h2 class="mt-3">New Book</h2>
    <%= form_with model: book do |f| %>
      <div class="form-group">
        <h4>Title</h4>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <h4>Body</h4>
        <%= f.text_area :body %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Book' %>
      </div>
    <% end %>
</div>