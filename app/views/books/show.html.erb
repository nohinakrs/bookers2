<%= render 'list', users: @user %>

<h2>Books</h2>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
            <tr>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= book.body %></td>
                <td><%= link_to "Edit", edit_book_path(book.id) %></td>
                <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure ?" %></td>
            </tr>
        <% end %>
    </tbody>
</table>