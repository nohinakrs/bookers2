
    <%= render 'list', user: @book.user, book: @newbook %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">

        <tbody>
          <tr>
            <td><%= link_to user_path(@book.user) do %>
              <%= image_tag @book.user.get_profile_image(100, 100) %>
            <% end %></td>
            <td><%= link_to @book.user.name, user_path(@book.user) %></td>
            <td><%= link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %></td>
            <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-sm btn-success edit_book_3372" %></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, class:"btn btn-sm btn-danger destroy_book_3372", data: { confirm: "本当に消しますか?" } %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
    <%# .は「の」として読む %>
