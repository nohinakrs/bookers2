<div class="container px-5 px-sm-0">
    <div class="row">

<%= render 'list', user: @user,book: @newbook %>

<div class="col-md-8 offset-md-1">

<h2>Book detail</h2>
<table class="table table-hover table-inverse">
    <thead>
        <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <tr>
          <th><%# image_tag book.get_book_image(100, 100) %></th>
          <th><%= link_to @book.title, book_path(@book) %></th>
          <th><%= @book.body %></th>
          <th><%= link_to "Edit", edit_book_path(@book.id) %></th>
          <th><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sure ?" %></th>
        </tr>
    </tbody>
</table>

</div>

  </div>
</div>